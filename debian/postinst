#!/bin/sh

set -e

if [ -e /home/user/.config/QMLBrowser/bookmarks.xml ]
    then
        echo "Removing old bookmarks"
        rm /home/user/.config/QMLBrowser/bookmarks.xml
        rm /home/user/.config/QMLBrowser/*.jpg
fi

if [ ! -e /home/user/.config/QMLBrowser/searchengines.conf ]
    then
        echo "[DuckDuckGo]
icon=duckduckgo.png
url=https://duckduckgo.com/?q=%QUERY%

[Wikipedia]
icon=wikipedia.png
url=http://wikipedia.org/wiki/Special:Search?search=%QUERY%" > /home/user/.config/QMLBrowser/searchengines.conf

chown -hR user:users /home/user/.config/QMLBrowser/

fi

exit 0
